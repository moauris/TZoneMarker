@{
}
@model IEnumerable<TZone>

<style>
    .tzcontainer {
        width: 999px;
        height: 60px;
    }
</style>

<div class="container shadow-lg bg-light">
    @foreach (TZone timezone in @Model)
    {
        <div class="tzcontainer">
            <div class="col-2">
                <div class="bg-dark text-light p-1">
                    <span class="text-lg-start">@timezone.CityName<small class="badge badge-secondary">@timezone.TimeZoneCode</small></span>
                    
                    <div>@timezone.Country</div>
                </div>
                
            </div>
            <div class="col-10">
                Show Days here
            </div>
        </div>
    }
</div>